<div class="container">
  <h1 class="my-3">The Longest Word</h1>
  <ul class="list-group list-group-horizontal mb-3">
    <% @letters.each do |letter| %>
      <li class="list-group-item mx-2 bg-primary text-white"><%=letter%></li>
    <% end %>
  </ul>


  <div class="d-flex flex-column align-items-center">
  <label class="form-label text-center">Enter your word:</label>
    <form action="/score" method="post" class="input-group mb-3" style="max-width: 600px;" data-turbo="false">
      <input type="text" class="form-control" name="word" placeholder="" aria-label="Input field">
      <button type="submit" class="btn btn-primary">Play</button>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %> <%# <input id="letters" name="letters", value="@letters"> %>
    </form>
  </div>
</div>
